<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme_CertificacionesActivity"
    android:orientation="vertical"
    tools:context=".view.activitys.CertificationsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/primaryDarkColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/back_flecha"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:backgroundTint="@color/whiteColor"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:background="@drawable/ic_flecha"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:background="@drawable/letra_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/texto_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textHola"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Â¡Hola!"
                android:textColor="@color/primaryTextColor"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/textHolaUser"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="User"
                android:textColor="@color/primaryTextColor"
                android:textSize="25sp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/text_certifiacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lista de Certificaciones:"
                android:textColor="@color/secondaryLightColor"
                android:textSize="18sp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagen_user"
            app:civ_border_width="5dp"
            app:civ_border_color="@color/color1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:src="@drawable/imagen_login_black" />
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/container_fragment_certificaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingButtonHistorial"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="30dp"
            android:visibility="gone"
            android:src="@drawable/historial"
            android:tint="@color/secondaryTextColor"
            android:cropToPadding="true"
            app:maxImageSize="60dp"
            app:fabCustomSize="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>